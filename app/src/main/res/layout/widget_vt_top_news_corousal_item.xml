<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/_150sdp"
    android:layout_height="@dimen/_60sdp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_margin="@dimen/_10sdp">

    <TextView
        android:id="@+id/top9_index"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="H"
        android:textSize="@dimen/title_article_size_bold"
        android:background="@drawable/circle_top9"
        android:fontFamily="@font/bold_font"
        android:textColor="@color/tv9color_red"
        android:gravity="center"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:focusable="false"
         />

    <TextView
        android:id="@+id/top9_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@+id/top9_index"
        app:layout_constraintEnd_toStartOf="@+id/top9_line"
        app:layout_constraintTop_toTopOf="parent"
        android:fontFamily="@font/regular_font"
        android:textColor="@color/black"
        android:paddingStart="@dimen/_7sdp"
        android:paddingEnd="@dimen/_7sdp"
        android:textSize="@dimen/_14ssp"
        android:minLines="3"
        android:maxLines="3"
        android:focusable="false"
        />

    <View
        android:id="@+id/top9_line"
        android:layout_width="@dimen/margin_1dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:background="@android:color/darker_gray"
        />

</androidx.constraintlayout.widget.ConstraintLayout>
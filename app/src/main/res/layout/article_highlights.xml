<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/start_layout_padding"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/bullet_img"
        android:layout_width="@dimen/margin_18dp"
        android:layout_height="@dimen/margin_18dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:background="@drawable/highlights_circle"
        android:src="@drawable/ic_plus"/>


    <TextView
        android:id="@+id/title_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/regular_font"
        android:textSize="@dimen/title_article_size"
        app:layout_constraintStart_toEndOf="@+id/bullet_img"
        app:layout_constraintTop_toTopOf="parent"
        android:paddingStart="@dimen/margin_10dp"
        />

</androidx.constraintlayout.widget.ConstraintLayout>
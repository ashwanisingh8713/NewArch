<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:focusableInTouchMode="false"
    android:focusable="false"
    >

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:contentInsetEnd="0dp"
        app:contentInsetLeft="0dp"
        app:contentInsetRight="0dp"
        app:contentInsetStart="0dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/button_speak"
                android:layout_width="@dimen/icon_width"
                android:layout_height="@dimen/icon_height"
                android:layout_marginLeft="@dimen/icon_margin"
                android:layout_marginRight="@dimen/icon_margin"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                />

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/logo_size"
                android:layout_marginLeft="@dimen/hamburger_logo_margin"
                android:layout_marginRight="@dimen/hamburger_logo_margin"
                android:layout_width="@dimen/hamburger_logo_width"
                android:layout_height="@dimen/hamburger_logo_height"
                app:layout_constraintLeft_toRightOf="@id/button_speak"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"/>



            <TextView
                android:id="@+id/button_bookmark"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/icon_height"
                android:layout_marginLeft="@dimen/icon_margin"
                android:layout_marginRight="@dimen/icon_margin"
                app:layout_constraintRight_toLeftOf="@id/button_comment"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:text="Mark As Bookmark"/>

            <TextView
                android:id="@+id/button_remove_bookmark"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/icon_margin"
                android:layout_marginRight="@dimen/icon_margin"
                app:layout_constraintRight_toLeftOf="@id/button_comment"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:text="Remove From Bookmark"/>

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/button_comment"
                android:layout_width="@dimen/icon_width"
                android:layout_height="@dimen/icon_height"
                android:layout_marginLeft="@dimen/icon_margin"
                android:layout_marginRight="@dimen/icon_margin"
                app:layout_constraintRight_toLeftOf="@id/button_share"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:background="@android:drawable/ic_dialog_dialer"
                />

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/button_share"
                android:layout_width="@dimen/icon_width"
                android:layout_height="@dimen/icon_height"
                android:layout_marginLeft="@dimen/icon_margin"
                android:layout_marginRight="@dimen/icon_margin"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"/>

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.appcompat.widget.Toolbar>

    <androidx.viewpager2.widget.ViewPager2
        android:id="@+id/view_pager"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/toolbar"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        />

</androidx.constraintlayout.widget.ConstraintLayout>
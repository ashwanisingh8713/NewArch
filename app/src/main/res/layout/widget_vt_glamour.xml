<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/_14sdp">

    <TextView
        android:id="@+id/cell_title_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingStart="@dimen/size_12dp"
        android:paddingEnd="@dimen/size_12dp"
        android:maxEms="14"
        android:visibility="gone"
        android:fontFamily="@font/bold_font"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:textSize="@dimen/size_18sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/cell_action_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:maxEms="14"
        android:paddingStart="@dimen/size_12dp"
        android:paddingEnd="@dimen/size_12dp"
        android:text="ARROW Img "
        android:visibility="gone"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/glamour_recycler_view"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_220sdp"
        android:layout_marginTop="@dimen/_10sdp"
        android:orientation="horizontal"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cell_action_btn"
        app:layout_constraintStart_toStartOf="parent"
        android:clipChildren="false"
        android:clipToPadding="false"
        android:paddingStart="@dimen/size_12dp"
        android:paddingEnd="@dimen/_50sdp"
        />


</androidx.constraintlayout.widget.ConstraintLayout>
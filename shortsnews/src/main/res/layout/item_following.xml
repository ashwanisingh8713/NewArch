<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/screen_background"
    android:paddingTop="20dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/edit_cons_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        >

        <ImageView
            android:id="@+id/client_icon"
            android:layout_width="60dp"
            android:layout_height="40dp"
            android:src="@drawable/toi"
            android:layout_marginStart="56dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

        <TextView
            android:id="@+id/channel_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            tools:text="The Times of India"
            android:textColor="@color/white"
            app:layout_constraintTop_toTopOf="@id/client_icon"
            app:layout_constraintBottom_toBottomOf="@id/client_icon"
            app:layout_constraintStart_toEndOf="@id/client_icon"
            app:layout_constraintEnd_toStartOf="@id/forword_icon"
            android:layout_marginEnd="5dp"
            android:layout_marginStart="10dp"
            android:textSize="16sp"
            android:fontFamily="@font/roboto_regular"
            android:textStyle="normal"/>


        <ImageView
            android:id="@+id/forword_icon"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/forword_icon"
            android:layout_marginEnd="44dp"
            android:background="@drawable/dotted_devider_background"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/client_icon"
            app:layout_constraintBottom_toBottomOf="@id/client_icon"/>


        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            app:layout_constraintTop_toBottomOf="@id/client_icon"
            android:layout_marginTop="30dp"
            android:background="@color/white"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginStart="38dp"
            android:layout_marginEnd="38dp"
            />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
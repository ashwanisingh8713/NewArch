<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    >
    
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ImageView
            android:id="@+id/app_logo"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:contentDescription="notification_icon"
            />
        <TextView
            android:id="@+id/notification_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="Title"
            android:textSize="@dimen/video_page_text_size_xxxlarge"
            android:textColor="@color/black"
            android:layout_marginStart="10dp"
            android:layout_toRightOf="@id/app_logo"
            android:fontFamily="@font/roboto_regular"
            android:maxLines="1"
            />
        <TextView
            android:id="@+id/notification_des"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="This is notification description"
            android:textSize="@dimen/video_page_text_size_xxlarge"
            android:textColor="@color/gray"
            android:layout_marginStart="10dp"
            android:fontFamily="@font/roboto_regular"
            android:layout_below="@id/notification_title"
            android:layout_toRightOf="@id/app_logo"
            android:layout_marginTop="10dp"
            />


    </RelativeLayout>







</RelativeLayout>
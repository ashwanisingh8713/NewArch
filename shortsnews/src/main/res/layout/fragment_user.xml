<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".user.ui.fragment.UserFragment"
    android:background="@color/screen_background">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/title_choice_txt"
        app:layout_constraintBottom_toTopOf="@id/user_submit_button"
        android:layout_marginTop="10dp"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp"
        android:layout_marginBottom="10dp">

        <com.google.android.material.chip.ChipGroup
            android:id="@+id/choice_chip_group"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="5dp"
            app:singleSelection="false"
            app:singleLine="false"
            app:chipSpacing="14dp"
            app:chipSpacingVertical="20dp"
            app:chipSpacingHorizontal="10dp"
            />


    </ScrollView>


    <com.google.android.material.button.MaterialButton
        android:id="@+id/user_submit_button"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="50dp"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp"
        android:backgroundTint="@color/button_background"
        android:text="@string/login_btn_text"
        android:textColor="@color/white"
        android:textAllCaps="false"
        android:textSize="12sp"
        android:fontFamily="@font/roboto_regular"
        app:cornerRadius="@dimen/_5sdp"/>

    <TextView
        android:id="@+id/title_choice_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Personalise your choice"
        android:textColor="@color/white"
        android:fontFamily="@font/roboto_bold"
        android:textStyle="bold"
        android:textSize="16sp"
        android:layout_marginTop="30dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/profile_image_view"
        tools:ignore="HardcodedText" />
    
    
    <ImageView
        android:id="@+id/profile_image_view"
        android:layout_width="118dp"
        android:layout_height="118dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/user_name_txt"
        android:background="@drawable/profile_image_background"
        android:src="@drawable/profile_image"
        android:layout_marginTop="40dp"/>

    <ImageView
        android:id="@+id/back_button_user"
        android:layout_width="25dp"
        android:layout_height="29dp"
        android:src="@drawable/back_button"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginStart="30dp"
        android:layout_marginTop="50dp"
        android:padding="5dp"
        android:contentDescription="back button otp"
        tools:ignore="HardcodedText" />

    <TextView
        android:id="@+id/user_name_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="Welcome Soni"
        android:textColorHint="@color/white"
        android:textColor="@color/white"
        android:fontFamily="@font/roboto_bold"
        android:textStyle="bold"
        android:textSize="26sp"
        android:layout_marginStart="30dp"
        app:layout_constraintStart_toEndOf="@id/back_button_user"
        app:layout_constraintTop_toTopOf="@id/back_button_user"
        app:layout_constraintBottom_toBottomOf="@id/back_button_user"
        tools:ignore="HardcodedText" />

</androidx.constraintlayout.widget.ConstraintLayout>
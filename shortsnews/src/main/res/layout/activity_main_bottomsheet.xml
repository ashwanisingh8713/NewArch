<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/bottomSheet"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:behavior_hideable="false"
    app:behavior_peekHeight="@dimen/bottom_sheet_header_peekheight"
    app:behavior_skipCollapsed="true"
    android:background="@color/black"
    app:layout_behavior="@string/bottom_sheet_behavior">


    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/bottom_sheet_header"
        android:layout_width="match_parent"
        android:layout_height="@dimen/bottom_sheet_header_peekheight"
        android:layout_marginTop="@dimen/bottom_sheet_header_margin"
        android:paddingStart="8dp"
        android:paddingEnd="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <!-- Start - Channel Image -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/card_view_client_image"
            android:layout_width="43dp"
            android:layout_height="43dp"
            app:cardBackgroundColor="@android:color/transparent"
            app:cardCornerRadius="50dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:cardElevation="@null"
            app:strokeColor="@color/white"
            app:strokeWidth="0.2dp">

            <ImageView
                android:id="@+id/client_image"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop" />

        </com.google.android.material.card.MaterialCardView>
        <!-- End - Channel Image -->

        <!-- Start - Following -->
        <TextView
            android:id="@+id/following"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:background="@drawable/follow_background"
            android:fontFamily="sans-serif"
            android:gravity="left"
            android:maxLines="1"
            android:paddingStart="16dp"
            android:paddingTop="6dp"
            android:paddingEnd="9dp"
            android:paddingBottom="6dp"
            android:textColor="@color/white"
            android:textSize="@dimen/video_page_text_size_medium"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@id/card_view_client_image"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="@string/follow" />
        <!-- End - Following -->

        <ProgressBar
            android:id="@+id/progress_bar"
            style="@style/TextAppearance.AppCompat.Title"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:gravity="center_vertical"
            android:padding="8dp"
            android:indeterminateTint="@color/white"
            android:indeterminateTintMode="src_in"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:visibility="gone"/>

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/imgDownArrow"
            style="@style/TextAppearance.AppCompat.Title"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:gravity="center_vertical"
            android:padding="6dp"
            android:src="@drawable/slide_up_arrow_icon"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/channel_top_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/bottom_sheet_header"
        >

        <androidx.cardview.widget.CardView
            android:id="@+id/channel_logo_card"
            android:layout_width="80dp"
            android:layout_height="80dp"
            app:cardCornerRadius="100dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:strokeColor="@color/white"
            app:strokeWidth="4dp"
            android:layout_marginEnd="@dimen/margin_end"
            android:layout_marginStart="@dimen/margin_start"
            android:layout_marginTop="@dimen/margin_start">

            <ImageView
                android:id="@+id/channel_logo"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/roud_corner_background"
                android:src="@drawable/channel_place_holder_icon"
                />
        </androidx.cardview.widget.CardView>



<!--        <com.google.android.material.card.MaterialCardView-->
<!--            android:id="@+id/card_view_for_pin_down"-->
<!--            android:layout_width="30dp"-->
<!--            android:layout_height="30dp"-->
<!--            app:cardCornerRadius="100dp"-->
<!--            app:cardBackgroundColor="@color/black"-->
<!--            android:layout_margin="@dimen/margin_start"-->
<!--            app:layout_constraintEnd_toEndOf="parent"-->
<!--            app:layout_constraintTop_toTopOf="parent">-->

<!--            <ImageView-->
<!--                android:id="@+id/pin_down_icon"-->
<!--                android:layout_width="wrap_content"-->
<!--                android:layout_height="wrap_content"-->
<!--                android:scaleType="centerInside"-->
<!--                android:src="@drawable/arrow_down"-->
<!--                android:contentDescription="@string/scroll_down_button"-->
<!--                android:layout_margin="@dimen/margin_start"-->
<!--                app:layout_constraintEnd_toEndOf="parent"-->
<!--                app:layout_constraintTop_toTopOf="parent"/>-->

<!--        </com.google.android.material.card.MaterialCardView>-->

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/const_profile_follow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/channel_logo_card"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="20dp"
            >
            <ImageView
                android:id="@+id/profile_icon"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:padding="8dp"
                android:src="@drawable/profile_avatar"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"/>

            <TextView
                android:id="@+id/profile_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="332k"
                android:textSize="@dimen/video_page_text_size_large"
                android:drawablePadding="8dp"
                android:textColor="@color/white"
                android:maxLines="1"
                app:layout_constraintTop_toTopOf="@id/profile_icon"
                app:layout_constraintBottom_toBottomOf="@id/profile_icon"
                app:layout_constraintStart_toEndOf="@id/profile_icon"
                android:layout_marginStart="5dp"
                />

            <TextView
                android:id="@+id/following_expanded"
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:background="@drawable/follow_background"
                android:fontFamily="sans-serif"
                android:maxLines="1"
                android:paddingStart="16dp"
                android:paddingTop="6dp"
                android:paddingEnd="9dp"
                android:paddingBottom="6dp"
                android:gravity="left"
                android:text="@string/follow"
                android:textColor="@color/white"
                android:textSize="@dimen/video_page_text_size_medium"
                app:layout_constraintBottom_toBottomOf="@id/profile_count"
                app:layout_constraintStart_toEndOf="@id/profile_count"
                app:layout_constraintTop_toTopOf="@id/profile_count" />

        </androidx.constraintlayout.widget.ConstraintLayout>


        <TextView
            android:id="@+id/channel_des"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textSize="@dimen/video_page_text_size_xlarge"
            android:fontFamily="@font/roboto_regular"
            android:textColor="@color/white"
            android:text="Welcome to the times of india Nuwes Page, Follow us for more information and snippets on so and so on."
            android:layout_marginStart="@dimen/margin_start"
            android:layout_marginEnd="@dimen/margin_end"
            android:gravity="center_horizontal"
            app:layout_constraintTop_toBottomOf="@+id/const_profile_follow"
            android:layout_marginTop="20dp"
            android:lineHeight="24dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <TextView
            android:id="@+id/website_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/video_page_text_size_xlarge"
            android:fontFamily="@font/roboto_regular"
            android:textColor="@color/white"
            android:text="Website"
            android:layout_marginStart="@dimen/margin_start"
            android:layout_marginEnd="@dimen/margin_end"
            android:visibility="gone"
            app:layout_constraintTop_toBottomOf="@+id/channel_des"
            android:layout_marginTop="20dp"
            app:layout_constraintStart_toStartOf="parent"
            android:drawableLeft="@drawable/website_icon"
            android:drawablePadding="5dp"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/channel_recyclerview"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:listitem="@layout/item_grid_view"
        app:spanCount="3"
        app:layoutManager="androidx.recyclerview.widget.GridLayoutManager"
        app:layout_constraintTop_toBottomOf="@+id/channel_top_view"
        app:layout_constraintBottom_toBottomOf="parent"/>


</androidx.constraintlayout.widget.ConstraintLayout>
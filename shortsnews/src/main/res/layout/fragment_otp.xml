<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".user.ui.fragment.OtpFragment"
    android:background="@color/screen_background">

    <ImageView
        android:id="@+id/back_button_otp"
        android:layout_width="25dp"
        android:layout_height="29dp"
        android:src="@drawable/back_button"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginStart="30dp"
        android:layout_marginTop="50dp"
        android:padding="5dp"
        android:contentDescription="back button otp"
        tools:ignore="HardcodedText" />

    <TextView
        android:id="@+id/title_otp_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/title_otp_sent_text"
        android:textColor="@color/white"
        android:fontFamily="@font/roboto_regular"
        android:textStyle="normal"
        android:textSize="16sp"
        android:layout_marginStart="30dp"
        android:layout_marginBottom="10dp"
        app:layout_constraintBottom_toTopOf="@+id/email_otp_txt"
        app:layout_constraintStart_toStartOf="parent"/>

    <TextView
        android:id="@+id/email_otp_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        android:fontFamily="@font/roboto_regular"
        android:textStyle="normal"
        android:textSize="16sp"
        tools:text="email@email.com"
        android:layout_marginStart="30dp"
        android:layout_marginBottom="90dp"
        app:layout_constraintBottom_toTopOf="@+id/otp_text_input"
        app:layout_constraintStart_toStartOf="parent"/>

    <EditText
        android:id="@+id/otp_text_input"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/edit_text_background"
        android:layout_marginStart="30dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginEnd="30dp"
        app:layout_constraintBottom_toTopOf="@id/login_button"
        android:hint="@string/otp_hint"
        android:textColor="@color/white"
        android:autofillHints="emailAddress"
        android:inputType="textEmailAddress"
        android:textColorHint="@color/white"
        android:textSize="12sp"
        android:fontFamily="@font/roboto_regular"
        android:layout_marginBottom="80dp"
        android:paddingStart="12dp"
        tools:ignore="RtlSymmetry"/>

    <TextView
        android:id="@+id/resend_otp_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/resend_text"
        android:textColor="@color/white"
        android:fontFamily="@font/roboto_regular"
        android:textStyle="normal"
        android:textSize="12sp"
        android:padding="5dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/otp_text_input"
        android:layout_marginTop="30dp"
        app:layout_constraintStart_toStartOf="parent"/>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/login_button"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="50dp"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp"
        android:backgroundTint="@color/button_background"
        android:text="@string/login_btn_text"
        android:textColor="@color/white"
        android:textAllCaps="false"
        android:textSize="12sp"
        android:fontFamily="@font/roboto_regular"
        app:cornerRadius="@dimen/_5sdp"/>


    <ProgressBar
        android:id="@+id/progress_bar_otp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:backgroundTint="@color/white"
        android:visibility="gone"
        />


</androidx.constraintlayout.widget.ConstraintLayout>
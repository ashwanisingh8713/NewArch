            app:layout_constraintStart_toEndOf="@id/card_view_client_image"
            app:layout_constraintTop_toTopOf="@id/card_view_client_image" />-->
        <!-- End - Following -->



    </androidx.constraintlayout.widget.ConstraintLayout>
    <!-- End Left Part  - Chanel, Title, Following -->

    <!-- Start - It holds Like, Comment, Share, Save -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/rightPart"
        android:layout_width="40dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="100dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:visibility="invisible">

        <!-- Start - Comment -->
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/const_comment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            >


            <ImageView
                android:id="@+id/comment"
                android:layout_width="34dp"
                android:layout_height="34dp"
                android:background="@null"
                android:scaleType="centerInside"
                android:src="@drawable/ic_comment"
                app:layout_constraintBottom_toTopOf="@id/msgCount"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent" />

            <TextView
                android:id="@+id/msgCount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:layout_marginTop="3dp"
                android:fontFamily=""
                android:text="120k"
                android:textColor="@color/white"
                android:textSize="10sp"
                android:textStyle="bold"
                app:layout_constraintBottom_toTopOf="@id/comment"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent" />


        </androidx.constraintlayout.widget.ConstraintLayout>
        <!-- End - Comment -->

        <!-- Start - Share -->
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/const_share"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            >

            <ImageView
                android:id="@+id/share"
                android:layout_width="34dp"
                android:layout_height="34dp"
                android:scaleType="centerInside"
                android:src="@drawable/share"
                app:layout_constraintBottom_toTopOf="@id/shareTitle"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent" />

            <TextView
                android:id="@+id/shareTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:fontFamily="sans-serif"
                android:text="@string/share"
                android:textColor="@color/white"
                android:textSize="10sp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/share" />


        </androidx.constraintlayout.widget.ConstraintLayout>
        <!-- End - Share -->

        <!-- Start - Save -->
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/const_save"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            >

            <ImageView
                android:id="@+id/save"
                android:layout_width="34dp"
                android:layout_height="34dp"
                android:layout_marginBottom="5dp"
                android:src="@drawable/save"
                app:layout_constraintBottom_toTopOf="@id/saveTitle"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent" />

            <TextView
                android:id="@+id/saveTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif"
                android:text="@string/save"
                android:textColor="@color/white"
                android:textSize="10sp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/save" />
        </androidx.constraintlayout.widget.ConstraintLayout>
        <!-- End - Save -->

        <!-- Start - Like New -->
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/const_like"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            >

            <ImageView
                android:id="@+id/like"
                android:layout_width="34dp"
                android:layout_height="34dp"
                android:layout_marginBottom="5dp"
                android:src="@drawable/ic_like"
                app:layout_constraintBottom_toTopOf="@id/likeTitle"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent" />

            <TextView
                android:id="@+id/likeTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif"
                android:text="@string/save"
                android:textColor="@color/white"
                android:textSize="10sp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/like" />
        </androidx.constraintlayout.widget.ConstraintLayout>
        <!-- End - Like New -->

        <androidx.constraintlayout.helper.widget.Flow
            android:id="@+id/flow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:constraint_referenced_ids="const_save,const_share,const_comment,const_like"
            app:flow_horizontalAlign="start"
            app:flow_horizontalStyle="packed"
            app:flow_maxElementsWrap="1"
            app:flow_verticalAlign="top"
            app:flow_verticalGap="30dp"
            app:flow_verticalStyle="packed"
            app:flow_wrapMode="chain"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>
    <!-- End - It holds Like, Comment, Share, Save -->




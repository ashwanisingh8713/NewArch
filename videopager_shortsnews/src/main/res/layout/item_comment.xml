<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/screen_background"
    android:paddingBottom="20dp">


    <com.google.android.material.card.MaterialCardView
        android:id="@+id/card_view_for_image"
        android:layout_margin="4dp"
        android:layout_width="40dp"
        android:layout_height="40dp"
        app:cardCornerRadius="12dp"
        app:strokeWidth="4dp"
        app:strokeColor="@color/white"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginEnd="15dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">

        <ImageView
            android:id="@+id/profile_icon"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerInside"
            android:src="@drawable/item_row_icon"
            android:contentDescription="profileImage" />

    </com.google.android.material.card.MaterialCardView>

    <TextView
        android:id="@+id/profile_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="14sp"
        android:fontFamily="sans-serif"
        android:textColor="@color/white"
        tools:text="Pramodh"
        app:layout_constraintTop_toTopOf="@id/card_view_for_image"
        app:layout_constraintStart_toEndOf="@id/card_view_for_image"
        android:layout_marginStart="20dp"/>

    <TextView
        android:id="@+id/post_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="14sp"
        android:fontFamily="sans-serif"
        android:textColor="@color/white"
        tools:text="20min ago"
        app:layout_constraintTop_toTopOf="@id/card_view_for_image"
        app:layout_constraintStart_toEndOf="@id/profile_name"
        android:layout_marginStart="5dp"/>

    <TextView
        android:id="@+id/comment_text"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textSize="14sp"
        android:fontFamily="sans-serif"
        android:textColor="@color/white"
        android:layout_marginTop="10dp"
        tools:text="The new AI is changing the world rapidly and it is also effecting the environment which is very danger for our future "
        app:layout_constraintTop_toBottomOf="@id/profile_name"
        app:layout_constraintStart_toStartOf="@id/profile_name"
        android:layout_marginStart="5dp"
        app:layout_constraintEnd_toEndOf="parent"
        />

</androidx.constraintlayout.widget.ConstraintLayout>